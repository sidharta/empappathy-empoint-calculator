<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>calculatorImageServlet</servlet-name>
        <servlet-class>com.empappathy.empoint.calculator.ImageEmpointCalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>calculatorImageServlet</servlet-name>
        <url-pattern>/calculate-image</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>calculatorCommentServlet</servlet-name>
        <servlet-class>com.empappathy.empoint.calculator.CommentsEmpointCalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>calculatorCommentServlet</servlet-name>
        <url-pattern>/calculate-comment</url-pattern>
    </servlet-mapping>
</web-app>
